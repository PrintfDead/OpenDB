{
    "plugins": ["plugins/markdown"],

    "recurseDepth": 10,

    "source": {

        "include": [ "dist" ],

        "includePattern": ".+\\.js(doc|x)?$"
    },

    "opts": {

        "destination": "./docs",

        "recurse": true,

        "template": "node_modules/clean-jsdoc-theme",

        "theme_opts": {
            "default_theme": "dark",
            "base_url": "https://printfdead.github.io/opendb",
            "homepageTitle": "OpenDB"
        }
    },

    "templates": {

        "cleverLinks":    false,
        "monospaceLinks": false
    },

    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}
